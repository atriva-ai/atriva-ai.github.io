---
import { Icon } from "astro-icon/components";

const cases = [
  {
    title: "Retail Analytics",
    description:
      "Track foot traffic, analyze customer flow, and optimize store layouts with real-time edge-based insights.",
    icon: "bx:bx-store",
    link: "/products#retail-analytics",
  },
  {
    title: "Workplace Safety",
    description:
      "Detect PPE compliance, monitor restricted zones, and alert on safety incidents automatically.",
    icon: "bx:bx-hard-hat",
    link: "/products#safety-monitor",
  },
  {
    title: "Smart Parking",
    description:
      "Automate license plate recognition, occupancy tracking, and violation detection at scale.",
    icon: "bx:bx-car",
    link: "/products#smart-parking",
  },
  {
    title: "Fall Detection",
    description:
      "Monitor spaces for falls and trigger instant alertsâ€”no wearables required, just existing cameras.",
    icon: "bx:bx-health",
    link: "/products#ai-vision-fall-detection",
  },
  {
    title: "Food Service",
    description:
      "Verify meal orders, detect anomalies, and ensure quality before delivery with AI inspection.",
    icon: "bx:bx-dish",
    link: "/products#meal-inspection-system",
  },
  {
    title: "Access Control",
    description:
      "Enable frictionless, privacy-compliant face recognition for secure entry management.",
    icon: "bx:bx-scan",
    link: "/products#access-control",
  },
];
---

<section class="relative py-20 md:py-12 bg-slate-50">
  <div class="container max-w-screen-xl mx-auto px-4">
    <div class="mt-16 md:mt-0">
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
        Use Cases
      </h2>
      <p class="text-lg mt-4 text-slate-600 max-w-2xl">
        Real-world applications powered by Atriva's edge-optimized AI stack.
      </p>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-12">
        {cases.map((item) => (
          <a 
            href={item.link}
            class="group flex gap-4 items-start p-4 -m-4 rounded-xl hover:bg-white hover:shadow-lg hover:shadow-slate-200/50 transition-all duration-300"
          >
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-xl bg-[#48A18D]/10 group-hover:bg-[#48A18D]/20 flex items-center justify-center transition-colors">
                <Icon name={item.icon} class="w-6 h-6 text-[#48A18D]" />
              </div>
            </div>
            <div>
              <h3 class="font-semibold text-lg text-slate-900 group-hover:text-[#48A18D] transition-colors">
                {item.title}
              </h3>
              <p class="text-slate-500 mt-2 leading-relaxed text-sm">
                {item.description}
              </p>
            </div>
          </a>
        ))}
      </div>

      <!-- View All Products Link -->
      <div class="mt-12 text-center">
        <a
          href="/products"
          class="inline-flex items-center gap-2 text-[#48A18D] hover:text-[#3b8675] font-medium transition-colors"
        >
          View all products
          <Icon name="bx:bx-right-arrow-alt" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </div>
</section>
