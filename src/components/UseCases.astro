---
import RetailIcon from "@/assets/icons/store.svg";
import SafetyIcon from "@/assets/icons/shield-check.svg";
import RobotsIcon from "@/assets/icons/bot.svg";

const cases = [
  {
    title: "Retail Analytics",
    description:
      "Run person detection, tracking, and attribute recognition at the store edge — no cloud dependency.",
    icon: RetailIcon,
  },
  {
    title: "Safety & Security",
    description:
      "Deploy occupancy monitoring, anomaly detection, and access alerts on low-power edge devices.",
    icon: SafetyIcon,
  },
  {
    title: "Robotics & Automation",
    description:
      "Optimize robot navigation, perception, and on-device inference with Atriva containers.",
    icon: RobotsIcon,
  },
];
---

<section class="relative py-20 md:py-12  bg-slate-50">
    <div class="container max-w-screen-xl mx-auto px-4">
    <div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Use Cases
  </h2>
  <p class="text-lg mt-4 text-slate-600 max-w-2xl">
    Real-world applications powered by Atriva’s edge-optimized stack.
  </p>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
    {cases.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="flex-shrink-0">
        <item.icon class="w-10 h-10 text-[#48A18D]" />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">
            {item.description}
          </p>
        </div>
      </div>
    ))}
  </div>
</div>

</div>
</section>